import streamlit as st 
st.title('Primera página a crear')
st.header('Segundo intento')

st.header('¡Bienvenido nuevo usuario!')
ss=st.selectbox('Seleccione una opcion', ('Me gustan los gatitos', 'Prefiero los perritos'))

st.sidebar.write('Espero se sienta emocionado de ver sus opciones en esta página')
st.sidebar.image('nuevacarpeta\gatitito.png')

st.sidebar.write('Deberia seleccionar una función y averiguar que pasa')

st.balloons()
if ss== 'Me gustan los gatitos':
  st.image('nuevacarpeta\gatito.botitas.jpg')
  st.video('nuevacarpeta\gatitobeso.mp4')
else:
  st.image('nuevacarpeta\perrito.jpeg')
  st.image('nuevacarpeta\perrito2.jpg')
st.write(ss)
